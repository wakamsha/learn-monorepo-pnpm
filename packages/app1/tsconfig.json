{
  "extends": "@learn-monorepo-pnpm/tsconfig/tsconfig.base",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@learn-monorepo-pnpm/core/*": ["../core/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "preserve"
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", ".next/types/**/*.ts", "../core/src/*.d.ts"],
  "exclude": ["node_modules"]
}

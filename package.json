{
  "name": "learn-monorepo-pnpm",
  "version": "1.0.0",
  "repository": "git@github.com:wakamsha/learn-monorepo-pnpm.git",
  "author": "wakamsha <wakamsha@gmail.com>",
  "license": "UNLICENSED",
  "engines": {
    "node": "18.13.0",
    "pnpm": "7.26.3",
    "npm": "please_use_pnpm_instead"
  },
  "packageManager": "pnpm@7.26.3",
  "scripts": {
    "app1": "   pnpm -F \"@learn-monorepo-pnpm/app1\"",
    "catalog": "pnpm -F \"@learn-monorepo-pnpm/catalog\"",
    "core": "   pnpm -F \"@learn-monorepo-pnpm/core\"",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@cspell/cspell-types": "6.22.0",
    "@typescript-eslint/eslint-plugin": "5.51.0",
    "@typescript-eslint/parser": "5.51.0",
    "cspell": "6.22.0",
    "eslint": "8.33.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "8.0.3",
    "lint-staged": "13.1.1",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.21",
    "prettier": "2.8.3",
    "prettier-plugin-organize-imports": "3.2.2",
    "stylelint": "14.16.1",
    "stylelint-config-prettier": "9.0.4",
    "stylelint-config-prettier-scss": "0.0.1",
    "stylelint-config-recess-order": "3.1.0",
    "stylelint-config-recommended": "9.0.0",
    "stylelint-config-standard-scss": "6.1.0",
    "typescript": "4.9.5"
  },
  "lint-staged": {
    "packages/**/*.ts{,x}": [
      "cspell",
      "prettier -c",
      "eslint -c .eslintrc.js"
    ],
    "packages/**/src/**/*.scss": [
      "prettier -c",
      "stylelint --cache"
    ]
  }
}
